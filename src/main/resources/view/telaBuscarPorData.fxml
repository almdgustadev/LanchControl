<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #FFF1BD;" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.TelaBuscarPorDataController">

    <center>
        <VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="20" BorderPane.alignment="CENTER">
            <Label styleClass="titulo" text="Buscar Venda" />

            <VBox alignment="CENTER" spacing="10">
                <Label alignment="CENTER" contentDisplay="CENTER" style="-fx-font-size: 14px;" text="Data da Venda:" textAlignment="CENTER">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></Label>
                <DatePicker fx:id="dataBuscaPicker" prefWidth="200">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></DatePicker>
            </VBox>

            <Button fx:id="button_buscarVenda" onAction="#buscarVenda" styleClass="botao" text="Buscar" />
        </VBox>
    </center>
</BorderPane>
