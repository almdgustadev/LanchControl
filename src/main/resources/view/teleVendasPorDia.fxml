<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER"
      spacing="20"
      style="-fx-background-color: #fdf6e3; -fx-padding: 30; -fx-background-radius: 10;">

    <Text text="Vendas por Dia" style="-fx-font-size: 24px; -fx-fill: #880e4f; -fx-font-weight: bold;" />

    <ListView fx:id="listaVendasPorDia"
              prefHeight="500"
              prefWidth="400"
              style="-fx-background-radius: 8; -fx-border-color: #d81b60; -fx-border-radius: 8; -fx-border-width: 2;" />

</VBox>
