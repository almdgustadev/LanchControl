<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="15"
      style="-fx-background-color: #fdf6e3; -fx-padding: 40; -fx-background-radius: 10;">

    <Label text="Cadastro de Venda" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #880e4f;" />

    <TextField fx:id="campoValor" promptText="Valor da venda"
               style="-fx-font-size: 16px; -fx-pref-width: 250px;" />

    <DatePicker fx:id="campoData"
                promptText="Data da venda"
                style="-fx-font-size: 16px; -fx-pref-width: 250px;" />

    <Button fx:id="botaoSalvar"
            text="Salvar"
            style="-fx-font-size: 16px; -fx-background-color: #d81b60; -fx-text-fill: white; -fx-background-radius: 8;"
            prefWidth="250" />

</VBox>
